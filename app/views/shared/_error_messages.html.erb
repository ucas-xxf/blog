<% if object.errors.any?%>
    <div id="error_explanation">
        <div class="alert alert-danger">
            提交错误: <%= pluralize(object.errors.count, "个")%>
        </div>
        <ul>
            <% object.errors.full_messages.each do |msg| %>
                <li><%= msg%></li>
            <%end%>
        </ul>
    </div>
<%end%>